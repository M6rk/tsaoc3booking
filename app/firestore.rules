rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        (request.auth.token.email == "admin@salvationarmy.ca" ||
         request.auth.token.email == "oc3admin@sa.ca");
    }
    
    // Helper function to check if user has valid SA email
    function isValidUser() {
      return request.auth != null && 
        request.auth.token.email.matches(".*@salvationarmy\\.ca$");
    }
    
    // Users collection - allow authenticated SA users to read any user profile
    match /users/{userId} {
      allow read: if isValidUser(); // Allow any SA user to read profiles
      allow write: if isAdmin(); // Only admin can write
    }
    
    // Room bookings - all authenticated SA users can read/write
    match /roomBookings/{bookingId} {
      allow read, write: if isValidUser();
    }
    
    // Vehicle bookings - all authenticated SA users can read/write
    match /vehicleBookings/{bookingId} {
      allow read, write: if isValidUser();
    }
  }
}