// Firestore Security Rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - only admins can read/write
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        (request.auth.token.email == "admin@salvationarmy.ca" || 
         request.auth.uid == userId);
    }
    
    // Room bookings - authenticated users can read/write their own
    match /roomBookings/{bookingId} {
      allow read, write: if request.auth != null && 
        request.auth.token.email.matches(".*@salvationarmy\\.ca$");
    }
    
    // Vehicle bookings - only users with fleet access
    match /vehicleBookings/{bookingId} {
      allow read, write: if request.auth != null && 
        request.auth.token.email.matches(".*@salvationarmy\\.ca$");
    }
  }
}